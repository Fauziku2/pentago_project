  <div class="col-md-3">

    <h1>White:
      <span class="player-x-name">
        <%= @match.playerx.name %>
      </span>

    </h1>

    <h1>Black:
      <span class="player-o-name">
        <% if @match.playero %>
          <%= @match.playero.name %>
        <% end %>
      </span>
    </h1>




    <%= render 'game_timer' %>

  </div>


  <div class="col-md-6">

