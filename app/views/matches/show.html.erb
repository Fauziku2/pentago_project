      </div>
    </div>

    <div class="form-group">
      <%= form_for @message, url: '#' do |f| %>
        <%= hidden_field_tag 'chat_room_id', @chat_room.id %>
        <!-- <%= f.label :body %> -->
        <%= f.text_area :body, class: 'form-control' %>
