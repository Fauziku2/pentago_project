        <div class="panel panel-default">

          <div class="panel-heading">Play Game</div>
            <div class="panel-body">

              <p class="nameMatch">Player 1: <%= match.playerx.name %></p>
              <!-- <%= link_to 'Destroy', match_path(match), method: :delete, data: { confirm: 'Are you sure?' } %> -->
              <%= button_to("Challenge!", challenge_match_path(match), :method => :patch, class: "btn btn-danger btn-sm" ) %>

            </div>
          </div>
        </div>
      <% end %>
      <% end %>
  </div>

