<div class="container">
    <div class="row">
        <div class="col-md-8">.col-md-8</div>
        <div class="col-md-4">
            <h2><%= @chat_room.title %></h2>

            <div class="message-wr">
                <div id="messages" class="messages" data-chat-room-id="<%= @chat_room.id %>">
                    <div id="messages-table" class="messages-table">
                        <%= render @chat_room.messages %>
                    </div>
                </div>
            </div>

            <%= form_for @message, url: '#' do |f| %>
            <%= hidden_field_tag 'chat_room_id', @chat_room.id %>
            <div class="form-group">
                <!-- <%= f.label :body %> -->
                <%= f.text_area :body, class: 'form-control' %>
                <small class="text-muted">From 2 to 1000 characters</small>
            </div>

            <!-- <%= f.submit "Post", class: 'btn btn-primary btn-lg' %> -->
            <% end %>
        </div>
    </div>
</div>
